<% content_for :heading do -%>
	New Contact Info
<% end -%>

<% content_for :actions do -%>
	<%= link_to '&larr; Back', contact_infos_path %>
<% end-%>

<% form_for @contact_info do |f| -%>
	<%= f.error_messages %>

	<%= render :partial => "form", :object => f %>
	<div>
		<%= f.submit 'Save', :disable_with => 'Saving...' %>
	</div>
<% end -%>