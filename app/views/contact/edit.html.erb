<% content_for :heading do -%>
	Edit Contact Info
<% end -%>

<% content_for :actions do -%>
	<%= link_to '&larr; Back', contact_infos_path %>
	<%= link_to 'x Delete', contact_info_path(@contact_info), :method => :delete, :confirm => 'Are you sure you want to delete this contact info? This cannot be undone.' %>
<% end-%>

<% form_for @contact_info do |f| -%>
	<%= f.error_messages %>

	<%= render :partial => "form", :object => f %>
	<div>
		<%= f.submit 'Save', :disable_with => 'Saving...' %>
	</div>
<% end -%>
