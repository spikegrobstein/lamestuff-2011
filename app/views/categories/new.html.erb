<% content_for :heading do -%>
	New Category
<% end -%>

<% content_for :actions do -%>
	<%= link_to '&larr; Back', categories_path %>
<% end-%>

<% form_for @category do |f| -%>
	<%= f.error_messages %>

	<%= render :partial => "form", :object => f %>
	
	<div>
		<%= f.submit 'Save', :disable_with => 'Saving...' %>
	</div>
<% end -%>
