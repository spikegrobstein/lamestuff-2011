<% content_for :heading do -%>
	New Project
<% end -%>

<% content_for :actions do -%>
	<%= link_to '&larr; Back', portfolio_path %>
<% end-%>

<% form_for @project, :html => { :multipart => true } do |f| -%>
	<%= f.error_messages %>
	<%= render :partial => "form", :object => f %>
	<div>
		<%= f.submit 'Save', :disable_with => 'Saving...' %>
	</div>
<% end -%>