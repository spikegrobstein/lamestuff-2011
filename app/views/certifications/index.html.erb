<% content_for :heading do -%>
	Certifications
<% end -%>

<% content_for :actions do -%>
	<%= link_to '+ New', new_certification_path %>
<% end-%>

<ul>
	<% @certifications.each do |certification| -%>
	<li>
		<%= link_to '&uArr;', :action => 'move', :id => certification, :move => 'move_to_top' %>
		<%= link_to '&uarr;', :action => 'move', :id => certification, :move => 'move_higher' %>
		<%= link_to '&darr;', :action => 'move', :id => certification, :move => 'move_lower' %>
		<%= link_to '&dArr;', :action => 'move', :id => certification, :move => 'move_to_bottom' %>
		<%= certification.description %>
		<%= link_to '[edit]', edit_certification_path(certification) %>
		<%= link_to '[X]', certification_path(certification), :method => 'delete', :confirm => 'Are you sure?' %>
	</li>
	<% end -%>
</ul>
