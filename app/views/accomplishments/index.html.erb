<% content_for :heading do -%>
	Accomplishments
<% end -%>

<% content_for :actions do -%>
	<%= link_to '+ New', new_accomplishment_path %>
<% end-%>

<ul>
	<% @accomplishments.each do |accomplishment| -%>
	<li>
		<%= link_to '&uArr;', :action => 'move', :id => accomplishment, :move => 'move_to_top' %>
		<%= link_to '&uarr;', :action => 'move', :id => accomplishment, :move => 'move_higher' %>
		<%= link_to '&darr;', :action => 'move', :id => accomplishment, :move => 'move_lower' %>
		<%= link_to '&dArr;', :action => 'move', :id => accomplishment, :move => 'move_to_bottom' %>
		<%= accomplishment.description %>
		<%= link_to '[edit]', edit_accomplishment_path(accomplishment) %>
		<%= link_to '[X]', accomplishment_path(accomplishment), :method => 'delete', :confirm => 'Are you sure?' %>
	</li>
	<% end -%>
</ul>
