<% content_for :heading do -%>
	Objectives
<% end -%>

<% content_for :actions do -%>
	<%= link_to '+ New', new_objective_path %>
<% end-%>

<ul>
	<% @objectives.each do |objective| -%>
	<li>
		<%= link_to '&uArr;', :action => 'move', :id => objective, :move => 'move_to_top' %>
		<%= link_to '&uarr;', :action => 'move', :id => objective, :move => 'move_higher' %>
		<%= link_to '&darr;', :action => 'move', :id => objective, :move => 'move_lower' %>
		<%= link_to '&dArr;', :action => 'move', :id => objective, :move => 'move_to_bottom' %>
		<%= objective.description %>
		<%= link_to '[edit]', edit_objective_path(objective) %>
		<%= link_to '[X]', objective_path(objective), :method => 'delete', :confirm => 'Are you sure?' %>
	</li>
	<% end -%>
</ul>
