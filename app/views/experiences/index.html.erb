<% content_for :heading do -%>
	Experiences
<% end -%>

<% content_for :actions do -%>
	<%= link_to '+ New', new_experience_path %>
<% end-%>

<ul>
	<% @experiences.each do |experience| -%>
	<li>
		<%= link_to '&uArr;', :action => 'move', :id => experience, :move => 'move_to_top' %>
		<%= link_to '&uarr;', :action => 'move', :id => experience, :move => 'move_higher' %>
		<%= link_to '&darr;', :action => 'move', :id => experience, :move => 'move_lower' %>
		<%= link_to '&dArr;', :action => 'move', :id => experience, :move => 'move_to_bottom' %>
		<%= experience.place %>
		<%= link_to '[edit]', edit_experience_path(experience) %>
		<%= link_to '[X]', experience_path(experience), :method => 'delete', :confirm => 'Are you sure?' %>
	</li>
	<% end -%>
</ul>
